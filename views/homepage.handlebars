<div class="row">
    <div class="col-12">
        <h1 class="my-4">Welcome to the Tech Blog</h1>
        {{#if logged_in}}
            <p>Hello, {{user.username}}! <a href="/dashboard">Visit your dashboard.</a></p>
        {{else}}
            <p>Welcome! <a href="/login">Log in</a> or <a href="/signup">sign up</a> to contribute.</p>
        {{/if}}
    </div>
</div>
<div class="row">
    {{#each posts as |post|}}
    <div class="col-md-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h2 class="card-title">{{post.title}}</h2>
                <p class="card-text">{{truncate post.content 120}}</p>
                <a href="/posts/{{post.id}}" class="btn btn-primary">Read More â†’</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{formatDate post.createdAt}} by {{post.user.username}}
            </div>
        </div>
    </div>
    {{else}}
    <p>No posts to display.</p>
    {{/each}}
</div>
